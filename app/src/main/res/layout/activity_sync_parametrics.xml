<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.sync.parametric.SyncParametricActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Parametricas"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            style="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/btn_sync_all_parametrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync All parametrics" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_siat_currency_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Siat Currency Type"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_siat_currency_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_document_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Document Type"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_document_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_payment_method_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Payment Method Type"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_payment_method_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Products"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_products_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_siat_products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Siat Products"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_siat_products_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_branch_activity_legend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Branch Activity Legends"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_branch_activity_legend_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_sync_siat_measurement_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sync Siat Measurement Unit"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_siat_measurement_unit_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get List" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response: " />

            <TextView
                android:id="@+id/tv_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>